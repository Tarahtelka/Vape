@model IEnumerable<VapeApp.WEB.Models.FluidViewModel>

@{
    ViewBag.Title = "Admin";
}

<h2>Admin</h2>

<p>
    @Html.ActionLink("Добавить", "Add")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Name)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Brand)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Company)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Contry)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.VG)/@Html.DisplayNameFor(model => model.PG)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Price)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Flavor)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Name)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Brand)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Company)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Contry)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.VG)/@Html.DisplayFor(modelItem => item.PG)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Price)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Flavor)
        </td>
        <td>
            @Html.ActionLink("Изменить", "Update", new { id = item.Id }) |
            @Html.ActionLink("Delete", "DeleteFluid", new { id = item.Id })
        </td>
    </tr>
}

</table>
